<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.NextcloudTasks" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowSplashScreenBackground">@color/ic_launcher_background</item>
        <item name="android:windowLightStatusBar">@bool/isLightTheme</item>
        <item name="android:windowLightNavigationBar">@bool/isLightTheme</item>
        <item name="android:enforceStatusBarContrast">true</item>
        <item name="android:enforceNavigationBarContrast">true</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>
    <bool name="isLightTheme" tools:targetApi="26">true</bool>
</resources>
